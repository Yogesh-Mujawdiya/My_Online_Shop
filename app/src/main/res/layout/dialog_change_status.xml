<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#673AB7"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_border"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Product Delivery Status"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:textSize="25dp"
        android:background="@drawable/toggle_on"
        />

    <Button
        android:id="@+id/StatusDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_black"
        android:text="Delivered"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/StatusCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_black"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:textSize="25dp"
        />
    </LinearLayout>

</androidx.cardview.widget.CardView>